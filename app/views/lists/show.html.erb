<h1><%= @list.name %></h1>
<div class="row">
<% @list.bookmarks.each do |bookmark| %>
  <%= render 'card', bookmark: bookmark %>
<% end %>
</div>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Select a movie" %>
  <%= f.button :submit %>
<% end %>
